<ul id="favorite_pages" class="sortable">
	<% for favorite_page in current_user.favorite_pages %>
		<% content_tag_for :li, favorite_page, :class => "deletable" do %>
			<span class="sort-handle"><span>[drag]</span></span>
			<%= link_to favorite_page.title + "<span class=\"light url\">#{truncate(h(favorite_page.url), :length => 30)}</span>", h(favorite_page.url) %>
			<%= link_to_remote "delete", 
								{:url => admin_destroy_favorite_page_path(:url => favorite_page.url)},
								:class => "delete_link" %>
		<% end -%>
	<% end -%>
</ul>

<%= sortable_element "favorite_pages", :url => admin_sort_favorite_pages_path, :handle => 'sort-handle' %>