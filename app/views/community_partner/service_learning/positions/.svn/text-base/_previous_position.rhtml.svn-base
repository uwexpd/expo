<tr <%= "class='not_current'" if previous_position.cloned_to?(@quarter) %>>

	<td><%= check_box_tag "position[]", previous_position.id, false, :id => "position_#{previous_position.id}" %></td>

	<td><label for="<%= "position_#{previous_position.id}" %>">
			<%= previous_position.title %>
			<%= " - Already copied to #{@quarter.title}" if previous_position.cloned_to?(@quarter) %>
		</label>

	<td><%= pluralize previous_position.placements.size, "slot" %> in <%= previous_position.quarter.title %></td>
	<td><span class="light tag"><%= previous_position.unit.name %></span></td>

</tr>