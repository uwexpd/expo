<h3><%= @organization.name %>
	<span class="right"><%= link_to "edit", edit_community_partner_service_learning_organization_path(@quarter) %></span></h3>
	
<p class="icon-left" id="address" style="background-position: 6px left; padding-left: 24px">
	<b>Mailing Address</b>
	<br><%=h @organization.mailing_line_1 %>
	<%= "<br />" + h(@organization.mailing_line_2) unless @organization.mailing_line_2.blank? %>
	<br /><%=h @organization.mailing_city %>, <%=h @organization.mailing_state %> <%=h @organization.mailing_zip %>
</p>

<p class="icon-left" id="website" style="background-position: 6px left; padding-left: 24px">
	<b>Website</b><br>
	<%= truncate(@organization.website_url, 35) %>
</p>

<p class="icon-left" id="phone" style="background-position: 6px left; padding-left: 24px">
	<b>Phone</b>
	<br><%= phone_number @organization.main_phone %>
	</p>

<% if @organizations.size > 1 %>
	<div class="full bottom-cap smaller">
		<%= link_to "Switch to another organization", {:controller => '.', :action => 'which'}, :class => 'icon-left', :id => 'switch' %>
	</div>
<% end -%>

<% if false # @organization.organization_quarters.find_all_by_quarter_id(Quarter.current_quarter.id).size > 1 %>
  <% @organization.organization_quarters.find_all_by_quarter_id(Quarter.current_quarter.id).each do |oq| %>
    <% unless oq.unit.id == @unit.id %>
    <div class="full bottom-cap smaller">
      <%= link_to "Switch to "+oq.unit.name+" positions", community_partner_service_learning_home_path(nil, :unit => oq.unit.id), 
                  :class => 'icon-left', :id => 'switch'  %>
    </div>
    <% end %>
  <% end %>
<% end %>