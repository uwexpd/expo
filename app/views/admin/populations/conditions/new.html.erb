<h1>New Condition</h1>

<% form_for :condition, @condition, :url => population_conditions_path(@population) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', population_conditions_path(@population) %>

<% end %>
