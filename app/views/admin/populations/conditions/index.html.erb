<h1>Conditions
	<span class="light right"><%= link_to "add new", new_population_condition_path(@population) %></span></h1>

<%= form_tag admin_communicate_write_email_url, :id => 'conditions_form' %>

<table>
	<tr>
		<th>Query</th>
		<th>Attribute</th>
		<th>Eval Method</th>
		<th>Value</th>
		<th colspan=3>Functions</th>
	</tr>
	<% for condition in @conditions %>
	<tr>
		<td><%=h condition.population_id %></td>
		<td><%=h condition.attribute %></td>
		<td><%=h condition.eval_method %></td>
		<td><%=h condition.value %></td>
		<td><%= link_to "Show", population_condition_path(@population, condition) %></td>
		<td><%= link_to "Edit", edit_population_condition_path(@population, condition) %></td>
		<td><%= link_to "Destroy", population_condition_path(@population, condition), 
						:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>

	<% if @conditions.empty? %>
	<tr class="empty">
		<td colspan=10>No conditions exist. <%= link_to "Create one.", new_population_condition_path(@population) %></td>
	</tr>
	<% end %>

</table>

</form>