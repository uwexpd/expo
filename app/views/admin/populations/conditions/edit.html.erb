<h1>Edit Condition</h1>

<% form_for :condition, @condition, 
			:url => population_condition_path(@population, @condition), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', population_condition_path(@population, @condition) %>

<% end %>
