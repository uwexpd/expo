<h1>Listing contacts</h1>

<table>
  <tr>
  </tr>

<% for contact in @organization_contacts %>
  <tr>
	<td><%= contact.person.fullname %></td>
	<td><%= contact.americorps ? "Yes" : "No" %>
		<%= " - term ends #{contact.americorps_term_end_date.to_s(:short)}" unless contact.americorps_term_end_date.blank? %>
		</td>
    <td><%= link_to 'Show', organization_contact_path(@organization, contact) %></td>
    <td><%= link_to 'Edit', edit_organization_contact_path(@organization, contact) %></td>
    <td><%= link_to 'Destroy', organization_contact_path(@organization, contact), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

