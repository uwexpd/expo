<h1>New organization</h1>

<%= error_messages_for :organization %>

<% form_for(@organization, :url => admin_organization_path(@organization)) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Default location</b><br />
    <%= f.text_field :default_location_id %>
  </p>

  <p>
    <b>Parent organization</b><br />
    <%= f.text_field :parent_organization_id %>
  </p>

  <p>
    <b>Mailing line 1</b><br />
    <%= f.text_field :mailing_line_1 %>
  </p>

  <p>
    <b>Mailing line 2</b><br />
    <%= f.text_field :mailing_line_2 %>
  </p>

  <p>
    <b>Mailing city</b><br />
    <%= f.text_field :mailing_city %>
  </p>

  <p>
    <b>Mailing state</b><br />
    <%= f.text_field :mailing_state %>
  </p>

  <p>
    <b>Mailing zip</b><br />
    <%= f.text_field :mailing_zip %>
  </p>

  <p>
    <b>Website url</b><br />
    <%= f.text_field :website_url %>
  </p>

  <p>
    <b>Main phone</b><br />
    <%= f.text_field :main_phone %>
  </p>

  <p>
    <b>Mission statement</b><br />
    <%= f.text_area :mission_statement %>
  </p>

  <p>
    <b>Approved</b><br />
    <%= f.check_box :approved %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', params[:return_to] || admin_organizations_path %>
