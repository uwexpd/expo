<h3>Contacts
	<span class="right"><%= link_to 'add new', new_organization_contact_path(@organization, :return_to => request.request_uri) %></span>
	</h3>

<table class="borderless highlightless">
<% for contact in @organization.contacts %>
	<tr><td>
			<%= contact.fullname %>
			<%= "<span class='tag'>PSL</span>" if contact.primary_service_learning_contact? %>
		</td>
		<td align=right>
			<%= link_to 'show', organization_contact_path(@organization, contact, :return_to => request.request_uri) %>
			|
			<%= link_to 'edit', edit_organization_contact_path(@organization, contact, :return_to => request.request_uri) %>
			|			
			<%= link_to 'delete', 
						organization_contact_path(@organization, contact, :return_to => request.request_uri), 
						:confirm => 'Are you sure?', 
						:method => :delete %>
		</td>
	</tr>
<% end -%>
</table>