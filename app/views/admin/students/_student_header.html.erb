<% anchor ||= nil %>
<% mode ||= :default %>

<div class="student_header">
	<%= image_tag admin_student_photo_path(@student.reg_id, :default), :class => 'student_photo', :size => "77x100", :alt => "" %>

	<h3><%= @student.fullname %>
		<span class="light"><%= @student.student_no %></span>
		<span class="right"><%= link_to "Details", admin_student_url(@student, :anchor => anchor), :popup => true, :class => 'button' unless mode == :view_only %></span></h3>
	
	<% if @student.respond_to?(:sdb) %>
		<p><%= @student.sdb.class_standing_description(:show_upcoming_graduation => true) %>,
			<%= @student.sdb.majors_list(true, ", ") %></p>
	<% end -%>

	<p><%= link_to_expo_email @student %></p>
	
</div>
