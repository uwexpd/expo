<div class="error-message">
	No valid risk waiver on file.
	<%= link_to_function "Add Paper AOR", "Effect.toggle('add_manual_paper_risk_form_#{student.id}', 'blind', {duration: 0.25})" %>
	
	<% unless student.service_learning_risk_paper_date.nil? %>
		<br>Last AOR received: <%= student.service_learning_risk_paper_date.to_date.to_s(:long) %>
	<% end -%>
				
	<div class="overlay box smaller" style="display:none" id="add_manual_paper_risk_form_<%= student.id %>">	
	<% fields_for :add_paper_risk do |f| -%>
	
		<br>Paper AOR received: 
		<%= text_field_tag :date, Time.now.to_date.to_s(:db), :size => 11 %>
		<%= submit_to_remote "add_paper_risk_button", "Save",
		 					:url => add_paper_risk_service_learning_course_path(@unit, @quarter, @service_learning_course,
																			:student_id => student.id),
							:indicator => 'global' %>
		
	<% end -%>
	</div>
	
</div>
