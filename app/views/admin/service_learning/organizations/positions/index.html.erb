<% @service_learning_positions ||= @pipeline_positions %>

<h1>Positions
	<span>&raquo; <%= @quarter.title %></span>
	<span class="right">
		<%= link_to 'Add new position', new_service_learning_organization_position_path(@unit ), :class => "add button" %>
		<%= link_to 'Copy previous position', copy_from_previous_service_learning_organization_positions_path(@unit ), :class => "copy button" %></span>
	</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Organization</th>
    <th>Placements</th>
	<th>Functions</th>
  </tr>

<% for service_learning_position in @service_learning_positions %>
  <tr>

    <td><%= link_to service_learning_position.title, service_learning_organization_position_path(@unit, @quarter, @organization, service_learning_position ) %></td>

    <td><%= link_to service_learning_position.organization_quarter.organization.name, service_learning_organization_path(@unit, @quarter, service_learning_position.organization_quarter.organization ) %></td>

    <td><%= service_learning_position.placements.count %>
		<%= "<span class='light'> &nbsp; / &nbsp; #{service_learning_position.placements.filled.size} filled</span>" unless service_learning_position.placements.empty? %>
		</td>

    <td><%= link_to "Show", service_learning_organization_position_path(@unit, @quarter, @organization, service_learning_position ) %>
		| <%= link_to "Edit", edit_service_learning_organization_position_path(@unit, @quarter, @organization, service_learning_position ) %>
		| <%= link_to 'Delete', service_learning_organization_position_path(@unit, @quarter, @organization, service_learning_position), :confirm => 'Are you sure?', :method => :delete %>
		</td>
  </tr>
<% end %>
</table>

<br />
