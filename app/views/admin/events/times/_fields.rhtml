<% default_start_time ||= Time.now %>
<% default_end_time ||= nil %>

<%= required_message %>

<dl class="inline-definitions">

	<dt>start time<%= required %></dt>
	<dd><%= f.datetime_select :start_time, :twelve_hour => true, :minute_step => 5, :default => default_start_time %></dd>

	<dt>end time</dt>
	<dd><%= f.datetime_select :end_time, :include_blank => true, :twelve_hour => true, :minute_step => 5, :default => default_end_time %></dd>
	
	<dt>location</dt>
	<dd><%= f.text_field :location_text %></dd>

	<dt>title</dt>
	<dd><%= f.text_field :title %>
		<p class="caption">Use this title to distinguish this time slot from others.</p></dd>

	<dt>facilitator</dt>
	<dd><%= f.text_field :facilitator %>
		<p class="caption">Store a staff person's name or other information.</p></dd>

	<dt>capacity</dt>
	<dd><%= f.text_field :capacity, :size => 5 %>
		<br><small class="light">Leave blank for unlimited</small></dd>
		
	<dt>notes</dt>
	<dd><%= f.text_area :notes, :rows => 4 %></dd>

</dl>