<h1>Editing Time</h1>

<% form_for :time, @time, :url => event_time_path(@event, @time), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', event_time_path(@event, @time) %>

<% end %>
