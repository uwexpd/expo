<h3>Event Management</h3>

<ul class="link-list">
	
	<% my_url = @time.nil? ? event_checkin_index_path(@event) : event_checkin_index_path(@event, :event_time_id => @time) %>
	<li><%= link_to "Check-in", my_url, :class => "icon-left checkin" %></li>

	<li><%= link_to "Nametags", event_nametags_path(@event), :class => "icon-left nametag" %></li>

	<% attendees_count_text = "#{@event.attendees.size} expected, #{@event.attended.size} attended" %>
	<li><%= link_to "Attendees <span id='sidebar_attendee_count'>#{attendees_count_text}</span>", attendees_event_path(@event), :class => 'icon-left people' %></li>
	
</ul>