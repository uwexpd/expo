<h1>New Event</h1>
<%= required_message %>

<% form_for :event, @event, :url => events_path() do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', events_path(), :class => 'cancel button' %>

<% end %>
