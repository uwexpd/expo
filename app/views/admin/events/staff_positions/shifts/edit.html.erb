<h1>Editing Shift</h1>

<% form_for :shift, @shift, :url => event_staff_position_shift_path(@event, @staff_position, @shift), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', event_staff_position_path(@event, @staff_position) %>

<% end %>
