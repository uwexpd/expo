<h1>Editing staff position</h1>

<% form_for :staff_position, @staff_position, :url => event_staff_position_path(@event, @staff_position), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', event_staff_position_path(@event, @staff_position) %>

<% end %>

<% sidebar :shifts %>