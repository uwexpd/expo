<h1>New staff position</h1>

<% form_for :staff_position, @staff_position, :url => event_staff_positions_path(@event) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', event_staff_positions_path(@event) %>

<% end %>
