<%= javascript_include_tag 'chosen.proto' %>
<%= javascript_include_tag 'prototype.1.7' %>
<%= stylesheet_link_tag 'chosen' %>

<dl class="inline-definitions">
	
	<dt><%= f.label :start_time %><%= required %></dt>
	<dd><%= f.datetime_select :start_time, :include_blank => true, :twelve_hour => true %></dd>
	
	<dt><%= f.label :end_time %></dt>
	<dd><%= f.datetime_select :end_time, :include_blank => true, :twelve_hour => true %></dd>
	
	<dt><%= f.label :staff_person_id %><%= required %></dt>
	<dd><%= f.collection_select(:staff_person_id, User.admin.reject{|u| u.person.firstname.nil?}.sort_by{|u| u.person.firstname}, :person_id, :fullname, {:prompt => true}, {:class => "chzn-select"}) %></dd>
	
	<dt><%= f.label :unit_id %><%= required %></dt>
	<dd><%= f.collection_select(:unit_id, Unit.all, :id, :name, :prompt => true) %></dd>
	
	<dt><%= f.label :student_id, "Student EXPO ID" %><%= required %></dt>
	<dd><%= f.text_field :student_id %></dd>
	
	<dt><%= f.label :check_in_time %></dt>
	<dd><%= f.datetime_select :check_in_time, :include_blank => true, :twelve_hour => true %></dd>
	
	<dt><%= f.label :drop_in %></dt>
	<dd><%= f.check_box :drop_in %></dd>
	
	<dt><%= f.label :contact_type_id %></dt>
	<dd><%= f.collection_select :contact_type_id, ContactType.all, :id, :title, :include_blank => true %></dd>
	
	<dt><%= f.label :front_desk_notes %></dt>
	<dd><%= f.text_area :front_desk_notes, :rows => 5, :style => "width: 99%" %></dd>
	
	<dt><%= f.label :notes %></dt>
	<dd><%= f.text_area :notes, :rows => 5, :style => "width: 99%" %></dd>
	
	<dt><%= f.label :follow_up_notes %></dt>
	<dd><%= f.text_area :follow_up_notes, :rows => 5, :style => "width: 99%" %></dd>
	
</dl>
