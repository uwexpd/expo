<h1>New Appointment</h1>

<% form_for :appointment, @appointment, :url => appointments_path do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', appointments_path, :class => 'cancel button' %>

<% end %>
