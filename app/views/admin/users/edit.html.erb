<h1>Edit <%= @user.login %></h1>

<% form_for @user do |f| %>

	<%= f.error_messages %>

	<dl class="inline-definitions">

		<dt>admin</dt>
		<dd><%= f.check_box :admin %>
			<%= f.label :admin, "User can access admin area" %>
			<p class="caption">In order to access anything past <code>/expo/admin</code>, a user must have this box checked.</p></dd>

	</dl>


	<%#= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', @user, :class => 'cancel button' %>

<% end %>
