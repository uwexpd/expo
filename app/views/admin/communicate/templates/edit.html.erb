<h1>Edit Template</h1>
<h3><%= @text_template.name.titleize %></h3>

<% form_for :text_template, @text_template, :url => admin_communicate_template_path(@text_template), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', admin_communicate_template_path(@text_template), :class => 'cancel button' %>

<% end %>

<% sidebar :formatting %>