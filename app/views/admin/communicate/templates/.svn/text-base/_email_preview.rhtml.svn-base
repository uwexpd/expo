<div class="email_preview">
		
	<% if @text_template.is_a? EmailTemplate %>
	<div class="headers">
		<dl class="inline-definitions squished">
			<dt>To:</dt>		<dd>(recipient's name)</dd>
			<dt>From:</dt>		<dd><%= @text_template.from %></dd>
			<dt>Subject:</dt>	<dd><%= @text_template.subject %></dd>
		</dl>
	</div>

	<% else -%>
	<div class="headers">
		<dl class="inline-definitions squished">
			<dt>Font:</dt>		<dd><%= @text_template.font %></dd>
			<dt>Margins:</dt>	<dd><%= @text_template.margins %></dd>
		</dl>
	</div>

	<% end -%>
	
	<div class="body">
		<%= simple_format(@text_template.highlighted_body) %>
	</div>
	
</div>