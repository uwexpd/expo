<h1>New Template</h1>

<% form_for :text_template, @text_template, :url => admin_communicate_templates_path do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', admin_communicate_templates_url, :class => 'cancel button' %>

<% end %>

<% sidebar :formatting %>