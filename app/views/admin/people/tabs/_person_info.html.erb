<h2>Person Info <%= link_to 'edit', edit_admin_person_path(@person), {:class => 'button'}%></h2>

<dl class="inline-definitions">
	<dt>email</dt>
	<dd><%= link_to_expo_email @person %></dd>
	
	<dt>title</dt>
	<dd><%= @person.title %></dd>
	
	<dt>department</dt>
	<dd><%= @person.department_name %></dd>
	
	<dt>organization</dt>
	<dd><%= @person.organization %></dd>
	
	<dt>local phone</dt>
	<dd><%= @person.phone_formatted %></dd>
	
	<dt>box number</dt>
	<dd><%= @person.box_no %></dd>
	
	<dt>address</dt>
	<dd><%= @person.address1 %>
		<% unless @person.address2.nil? || @person.address2.empty? %><br><%= @person.address2 %><% end %>
		<% unless @person.address2.nil? || @person.address3.empty? %><br><%= @person.address3 %><% end %>
		<br><%= @person.city %>, <%= @person.state %> <%= @person.zip %></dd>

</dl>