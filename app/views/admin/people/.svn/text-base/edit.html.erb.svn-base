<h1>Editing Person</h1>

<% form_for :person, @person, :url => admin_person_path(@person), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', params[:return_to] || admin_person_path(@person) %>

<% end %>