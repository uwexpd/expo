<h1>Manage <%= params[:attribute_class].titleize.pluralize %></h1>

<%= hidden_field_tag("attribute_class", params[:attribute_class]) %>
<table class="highlightless">
  <% @attributes.each do |attribute| %>
    <%= render :partial => "attribute", 
               :locals => {:attribute => attribute, 
                           :attribute_class => params[:attribute_class]} %>
  <% end %>
  <tr id="new_attribute_row">
    <td>
      <%= text_field_tag 'new_attribute' %>
      <%= link_to_remote "Add", 
              {:url => create_position_attribute_admin_pipeline_path(:attribute_class => params[:attribute_class]), 
               :with => "'name=' + $('new_attribute').value",
               :loading  => "$('add_attribute_indicator').show()",
               :complete => "$('add_attribute_indicator').hide()"}, {:class => "button"} %>
      <%= indicator("add_attribute_indicator") %>
    </td>
    <td>
    </td>
   </tr>
</table>

<% sidebar :pipeline_links %>

<% sidebar "admin/service_learning/positions/sidebar/search" %>

