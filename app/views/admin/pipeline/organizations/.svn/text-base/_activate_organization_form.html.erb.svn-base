
<ul id="activate_organization_form" class="link-list">

	<li><%= link_to "Create new organization", 
					new_service_learning_organization_path(@unit, @quarter ),
					:class => "icon-left add" %></li>

	<% form_for :activate, :url => activate_admin_pipeline_organizations_path(@quarter) do |f| -%>
	<li class="icon-left list">
		<%= f.collection_select :organization_id,
	 							Organization.find_inactive(@quarter, {:unit_id => @unit.id}).sort,
								:id, :name,
								{ :prompt => "Activate existing organization" },
								{ :style => "width:100%" } %>
		<% if @use_pipeline_links %>
		<%= hidden_field_tag "from_pipeline", "true"%>
		<% end %>
		<%= f.submit "Activate", :disable_with => 'Activating...' %>
		</li>
	<% end -%>
		
	<%- unless current_page? partner_access_service_learning_organizations_path(@unit, @quarter) -%>
	<li><%= link_to "Community Partner Access", 
					partner_access_service_learning_organizations_path(@unit, @quarter ),
					:class => "icon-left access" %></li>
	<% end -%>
		
</ul>