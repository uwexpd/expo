<h3>Statuses
	<span class="right light"><%= link_to "see all", offering_statuses_path(@offering) %></span>
	</h3>

<ul class="link-list">
	
	<% for status in @offering.statuses.sort %>
	<li <%= "class='current'" if @status == status %>>
		<%= link_to "<small class='light'>#{status.sequence}</small> #{status.private_title}", 
					offering_status_path(@offering, status) %>
	</li>
	<% end -%>
	
</ul>