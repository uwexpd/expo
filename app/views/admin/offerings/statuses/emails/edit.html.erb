<h1>Editing Email</h1>

<% form_for :email, @email, :url => offering_status_email_path(@offering, @status, @email), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_status_email_path(@offering, @status, @email), :class => 'cancel button' %>

<% end %>
