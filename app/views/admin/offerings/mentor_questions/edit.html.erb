<h1>Edit Mentor Questions</h1>

<% form_for :mentor_questions, @mentor_questions, 
			:url => offering_mentor_question_path(@offering, @mentor_questions), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_mentor_question_path(@offering, @mentor_questions), :class => 'cancel button' %>

<% end %>
