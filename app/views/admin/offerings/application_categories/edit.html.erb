<h1>Edit Application Category</h1>

<% form_for :application_category, @application_category, 
			:url => offering_application_category_path(@offering, @application_category), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_application_category_path(@offering, @application_category), :class => 'cancel button' %>

<% end %>
