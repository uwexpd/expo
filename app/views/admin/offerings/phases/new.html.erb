<h1>New Phase</h1>

<% form_for :phase, @phase, :url => offering_phases_path(@offering) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator %>
	<%= link_to 'Cancel', offering_phases_path(@offering), :class => "cancel button" %>

<% end %>
