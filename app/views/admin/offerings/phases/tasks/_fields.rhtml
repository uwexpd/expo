<div class="tabview">

	<div id="tabs">
		<ul>
			<%= link_to_tab_pane "Display Options", :display_options, :class => 'current' %>
			<%= link_to_tab_pane "Notes", :notes %>
			<%= link_to_tab_pane "Completion Criteria", :completion_criteria %>
			<%= link_to_tab_pane "Extra Fields", :extra_fields %>
		</ul>
	</div>

	<div id="frame">

		<%= content_tag 'div', indicator_image + 'Loading...', indicator_options %>

		<% tab_pane :display_options, :selected => true do %>
			<%= render :partial => "admin/offerings/phases/tasks/tabs/display_options", :locals => { :f => f } %>
		<% end -%>

		<% tab_pane :notes do %>
			<%= render :partial => "admin/offerings/phases/tasks/tabs/notes", :locals => { :f => f } %>
		<% end -%>

		<% tab_pane :completion_criteria do %>
			<%= render :partial => "admin/offerings/phases/tasks/tabs/completion_criteria", :locals => { :f => f } %>
		<% end -%>

		<% tab_pane :extra_fields do %>
			<%= render :partial => "admin/offerings/phases/tasks/tabs/extra_fields", :locals => { :f => f } %>
		<% end -%>

	</div>
	
</div>

<%= autoload_tab_pane %>