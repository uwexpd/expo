<h1>New extra field</h1>

<% form_for :extra_field, @extra_field, :url => offering_phase_task_extra_fields_path(@offering, @phase, @task) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<span class="separator">&mdash; or &mdash;</span>
	<%= link_to 'Cancel', offering_phase_task_extra_fields_path(@offering, @phase, @task) %>

<% end %>
