<h3>Phase Tasks
	<span class="right light"><%= link_to "see all", offering_phase_tasks_path(@offering, @phase) %></span>
	</h3>

<ul class="link-list">
	
	<% for phase in @offering.phases.sort %>
	<li <%= "class='current'" if @phase == phase %>>
		<%= link_to "<small class='light'>#{phase.sequence}</small>" + phase.name + " <small>(#{pluralize phase.tasks.size, 'task'})</small>", 
					offering_phase_tasks_path(@offering, phase) %>
	</li>
	<% end -%>
	
</ul>