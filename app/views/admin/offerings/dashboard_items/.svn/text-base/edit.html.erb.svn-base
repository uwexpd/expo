<h1>Editing Dashboard Item</h1>

<% form_for :dashboard_item, @dashboard_item, :url => offering_dashboard_item_path(@offering, @dashboard_item), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_dashboard_item_path(@offering, @dashboard_item) %>

<% end %>
