<h3>Save</h3>
<center>
<%= button_to_remote "Save &amp; Keep Working",
					:url => offering_path(@offering), 
					:html => { :method => :put },
 					:update => { :success => 'save_success_message', :failure => 'save_failure_message' },
 					:submit => 'offering_form',
 					:indicator => 'save_indicator',
 					:before => "$('save_success_message').update(); $('save_failure_message').update();"	%>
<br>
<%= indicator(:id => 'save_indicator') %>
<span id="save_success_message" class="success-message"></span>
<span id="save_failure_message" class="error-message"></span>
</center>