<h1>New Invitation Code</h1>

<% form_for :invitation_code, @invitation_code, :url => offering_invitation_codes_path(@offering) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_invitation_codes_path(@offering), :class => 'cancel button' %>

<% end %>
