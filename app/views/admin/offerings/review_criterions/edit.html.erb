<h1>Edit Review Criterion</h1>

<% form_for :review_criterion, @review_criterion, 
			:url => offering_review_criterion_path(@offering, @review_criterion), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_review_criterion_path(@offering, @review_criterion), :class => 'cancel button' %>

<% end %>
