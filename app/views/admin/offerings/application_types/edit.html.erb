<h1>Edit Application Type</h1>

<% form_for :application_type, @application_type, 
			:url => offering_application_type_path(@offering, @application_type), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_application_type_path(@offering, @application_type), :class => 'cancel button' %>

<% end %>
