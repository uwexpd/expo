<h1>Edit Other Award Type</h1>

<% form_for :other_award_type, @other_award_type, 
			:url => offering_other_award_type_path(@offering, @other_award_type), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_other_award_type_path(@offering, @other_award_type), :class => 'cancel button' %>

<% end %>
