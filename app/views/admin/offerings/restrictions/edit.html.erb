<h1>Edit Restriction</h1>

<% form_for :restriction, @restriction, 
			:url => offering_restriction_path(@offering, @restriction), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_restriction_path(@offering, @restriction), :class => 'cancel button' %>

<% end %>
