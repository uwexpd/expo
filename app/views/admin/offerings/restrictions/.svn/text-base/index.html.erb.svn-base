<h1>Restrictions
	<span class="light right"><%= link_to "Add new restriction", new_offering_restriction_path(@offering), :class => "add button" %></span></h1>

<%= form_tag admin_communicate_write_email_url, :id => 'restrictions_form' %>

<table>
	<tr>
		<th style="width:30%">Type</th>
		<th>Extra Detail</th>
		<th style="width:100px">Functions</th>
	</tr>
	<% for restriction in @restrictions %>
	<tr>
		<td><%=h restriction.type %>
			<br /><small class="light"><%=h restriction.title %></small></td>
		<td><%=h restriction.extra_detail %></td>
		<td><%= link_to "<span>Show</span>", offering_restriction_path(@offering, restriction), :class => "icon-left no-text show" %>
			<%= link_to "<span>Edit</span>", edit_offering_restriction_path(@offering, restriction), :class => "icon-left no-text edit" %>
			<%= link_to "<span>Destroy</span>", offering_restriction_path(@offering, restriction), 
						:confirm => 'Are you sure?', :method => :delete,
						:class => "icon-left no-text trash" %></td>
	</tr>
	<% end %>

	<% if @restrictions.empty? %>
	<tr class="empty">
		<td colspan=10>No restrictions exist. <%= link_to "Create one.", new_offering_restriction_path(@offering) %></td>
	</tr>
	<% end %>

</table>

</form>
<% sidebar "/admin/offerings/sidebar/settings" %>