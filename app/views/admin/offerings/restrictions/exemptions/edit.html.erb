<h1>Edit Exemption</h1>

<% form_for :exemption, @exemption, 
			:url => offering_restriction_exemption_path(@offering, @restriction, @exemption), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_restriction_exemption_path(@offering, @restriction, @exemption), :class => 'cancel button' %>

<% end %>
