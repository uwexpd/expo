<h1>New Exemption</h1>

<% form_for :exemption, @exemption, :url => offering_restriction_exemptions_path(@offering, @restriction) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_restriction_exemptions_path(@offering, @restriction), :class => 'cancel button' %>

<% end %>
