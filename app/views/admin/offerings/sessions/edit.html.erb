<h1>Editing Session</h1>

<% form_for :session, @session, :url => offering_session_path(@offering, @session), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_session_path(@offering, @session) %>

<% end %>
