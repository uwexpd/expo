<h3>Location Sections</h3>

<ul class="link-list">
	
	<% for location_section in @offering.location_sections %>
		<% count = @presenters.select{|a| a.location_section == location_section }.size %>
		<li><%= link_to "#{location_section.title} (#{count})", :anchor => location_section.title %></li>
	<% end -%>
	
</ul>