<h1>New Location Section</h1>

<% form_for :location_section, @location_section, :url => offering_location_sections_path(@offering) do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Create", :disable_with => 'Creating...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_location_sections_path(@offering), :class => 'cancel button' %>

<% end %>
