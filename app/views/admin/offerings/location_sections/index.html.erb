<h1>Location Sections
	<span class="light right"><%= link_to "Add new location section", new_offering_location_section_path(@offering), :class => 'add button' %></span></h1>

<%= form_tag admin_communicate_write_email_url, :id => 'location_sections_form' %>

<table>
	<tr>
		<th>Title</th>
		<th>Starting Easel Number</th>
		<th>Ending Easel Number</th>
		<th>Color</th>
		<th colspan=3>Functions</th>
	</tr>
	<% for location_section in @location_sections %>
	<tr id="location_section_<%= location_section.id %>">
		<td><%=h location_section.title %></td>
		<td><%=h location_section.starting_easel_number %></td>
		<td><%=h location_section.ending_easel_number %></td>
		<td><span style="background:#<%=h location_section.color %>;"><%=h location_section.color %> </span></td>
		<td><%= link_to "Show", offering_location_section_path(@offering, location_section) %></td>
		<td><%= link_to "Edit", edit_offering_location_section_path(@offering, location_section) %></td>
		<td><%= link_to_remote "Destroy", 
						:url => offering_location_section_path(@offering, location_section), 
						:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>

	<% if @location_sections.empty? %>
	<tr class="empty">
		<td colspan=10>No location sections exist. <%= link_to "Create one.", new_offering_location_section_path(@offering) %></td>
	</tr>
	<% end %>

</table>

</form>

<% sidebar "/admin/offerings/sidebar/settings" %>