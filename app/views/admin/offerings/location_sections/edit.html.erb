<h1>Edit Location Section</h1>

<% form_for :location_section, @location_section, 
			:url => offering_location_section_path(@offering, @location_section), 
			:html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', offering_location_section_path(@offering, @location_section), :class => 'cancel button' %>

<% end %>
