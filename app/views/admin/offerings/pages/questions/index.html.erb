<h1 class="big-icon pages">Questions
	<span class="light">&raquo; <%= @page.title %></span>
	</h1>
	
	<small class="light"><%= required %> = required field</small>
	
<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Question</th>
			<th>Type</th>
			<th>Data Storage</th>
			<th style="width: 100px">Functions</th>
		</tr>
	</thead>

	<tbody id="questions">
	<%= render :partial => 'question', :collection => @questions %>

	<% if @questions.empty? %>
		<tr class="empty">
			<td colspan=5>
				No questions exist yet. 
				<%= link_to 'Click here to create one.', new_offering_page_question_path(@offering, @page) %>
			</td>
		</tr>
	<% end -%>
	</tbody>

</table>

<%= sortable_element "questions", :tag => :tr, :url => sort_offering_page_questions_path(@offering, @page), :handle => 'sort-handle', :indicator => 'global' %>

<% sidebar :functions, "admin/offerings/pages/sidebar/pages" %>