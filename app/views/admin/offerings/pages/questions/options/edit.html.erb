<% form_for :option, @option, :url => offering_page_question_option_path(@offering, @page, @question, @option), :html => { :method => :put } do |f| %>

	<h1>Editing Option</h1>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', edit_offering_page_question_path(@offering, @page, @question, :anchor => 'option'), :class => 'cancel button' %>
	
<% end %>
