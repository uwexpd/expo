<h1 class="big-icon pages">Validations
	<span class="light">&raquo; <%= @question.short_question_title %></span>
	</h1>
	
<table>
	<thead>
		<tr>
			<th>Validation Type</th>
			<th>Error Text</th>
			<th style="width: 70px">Functions</th>
		</tr>
	</thead>

	<tbody id="validations">
	<%= render :partial => 'validation', :collection => @validations %>

	<% if @validations.empty? %>
		<tr class="empty">
			<td colspan=5>
				No advanced validations exist yet. 
				<%= link_to 'Click here to create one.', new_offering_page_question_validation_path(@offering, @page, @question) %>
			</td>
		</tr>
	<% end -%>
	</tbody>

</table>