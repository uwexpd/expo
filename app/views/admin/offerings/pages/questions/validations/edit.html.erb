<% form_for :validation, @validation, :url => offering_page_question_validation_path(@offering, @page, @question, @validation), :html => { :method => :put } do |f| %>

	<h1>Editing Validation</h1>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>

	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', edit_offering_page_question_path(@offering, @page, @question, :anchor => 'validation'), :class => 'cancel button' %>
	
<% end %>
