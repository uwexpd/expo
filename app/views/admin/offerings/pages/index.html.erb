<h1 class="big-icon pages">Pages &amp; Questions</h1>

<table>
	<thead>
		<tr>
			<th>#</th>
			<th>Title</th>
			<th>Questions</th>
			<th style="width:100px">Functions</th>
		</tr>
	</thead>

	<tbody id="pages">
	<%= render :partial => 'page', :collection => @pages %>

	<% if @pages.empty? %>
		<tr class="empty">
			<td colspan=5>
				No pages exist yet. 
				<%= link_to 'Click here to create one.', new_offering_page_path(@offering) %>
			</td>
		</tr>
	<% end -%>
	</tbody>

</table>

<%= sortable_element "pages", :tag => :tr, :url => sort_offering_pages_path(@offering), :handle => 'sort-handle', :indicator => 'global' %>
<% sidebar "/admin/offerings/sidebar/settings" %>
<% sidebar :functions %>


