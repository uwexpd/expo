<h1>Event Types
	<span class="light right"><%= link_to "Add new event type", new_event_type_path, :class => 'add button' %></span></h1>

<%= form_tag admin_communicate_write_email_url, :id => 'event_types_form' %>

<table>
	<tr>
		<th>Title</th>
		<th>Description</th>
		<th colspan=3>Functions</th>
	</tr>
	<% for event_type in @event_type %>
	<tr id="event_types_<%= event_type.id %>">
		<td><%=h event_type.title %></td>
		<td><%=h event_type.description %></td>
		<td><%= link_to "Show", event_type_path(event_type) %></td>
		<td><%= link_to "Edit", edit_event_type_path(event_type) %></td>
		<td><%= link_to_remote "Destroy", 
						:url => event_type_path(event_type), 
						:confirm => 'Are you sure?', :method => :delete %></td>
	</tr>
	<% end %>

	<% if @event_type.empty? %>
	<tr class="empty">
		<td colspan=10>No event types exist. <%= link_to "Create one.", new_event_type_path %></td>
	</tr>
	<% end %>

</table>

</form>