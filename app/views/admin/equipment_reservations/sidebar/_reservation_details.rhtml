<h3>Reservation Details</h3>

<%- if @equipment_reservation.submitted? -%>
<dl class="sidebar">
	
	<dt>Pick up date</dt>
	<dd><%=h relative_timestamp(@equipment_reservation.start_date, :date_only => true) %></dd>

	<dt>Return date</dt>
	<dd><%=h relative_timestamp(@equipment_reservation.end_date, :date_only => true) %> 
		by <%= @equipment_reservation.expected_time_due_back.to_s(:time12) %></dd>

	<dt>Length</dt>
	<dd><%= @equipment_reservation.length_in_words %></dd>

	<dt>Project Description</dt>
	<dd><%=h @equipment_reservation.project_description %></dd>
	
	<dt>Unit Sponsor</dt>
	<dd><%=h @equipment_reservation.unit.try(:name) %></dd>

</dl>
<% end -%>
