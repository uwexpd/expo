<%= link_to_function "<span class='toggle_state'>+</span>View unit equipment reservation approvers", 
						"flipToggleable('approvers', this)",
						:class => "toggleable" %>

<div id="approvers" style="display:none">
	<dl class="squished inline-definitions">

		<% for unit in Unit.for_equipment_reservation %>
			<dt><%= unit.abbreviation %></dt>
			<dd><%= unit.users_in_role(:equipment_reservation_approver).collect(&:fullname).join(", ") %></dd>
		<% end -%>

	</dl>
</div>