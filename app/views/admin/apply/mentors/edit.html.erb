<h1>Edit Mentor</h1>

<% upload_form_for :mentor, @mentor, :url => admin_apply_mentor_path(@offering, @app, @mentor), :html => { :method => :put } do |f| %>

	<%= f.error_messages %>

	<%= render :partial => "fields", :locals => { :f => f } %>
	
	<%= f.submit "Save", :disable_with => 'Saving...' %>
	<%= separator "or" %>
	<%= link_to 'Cancel', admin_apply_mentor_path(@offering, @app, @mentor) %>

<% end %>
