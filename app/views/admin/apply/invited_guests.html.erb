<h1>Invited Guests</h1>

<%= form_tag url_for(:action => 'postcard'), :id => 'invited_guests_form' %>

<table>

	<tr>
		<th><%= select_all_check_box %></th>
		<th colspan=2>Guest Name</th>
		<th>Address</th>
		<th>Invited By</th>
		<th>Invitation Mailed?</th>
		<th>View</th>
		<th>Customize</th>
	</tr>
	
	<tr class="rowset-header">
		<td><%= select_all_check_box false %></td>
		<td colspan=7>Waiting to be Mailed</td>
	</tr>
	<%= render :partial => "invited_guest", :collection => @not_mailed %>
	
	<% if @not_mailed.empty? %>
	<tr class="empty">
		<td colspan=8>No invitations are waiting to be mailed.</td>
	</tr>
	<% end -%>
	
	<tr class="rowset-header">
		<td><%= select_all_check_box true %></td>
		<td colspan=7>Already Mailed</td>
	</tr>
	<%= render :partial => "invited_guest", :collection => @mailed %>
	
</table>

</form>

<% sidebar :quick_access, :invited_guests_functions %>