<h3>Interview Times</h3>
<table>

	<tr>
		<th colspan=2>Interview Start Time</th>
		<th>Student Name</th>
		<th>Interview Committee Members</th>
	</tr>

<% @interviews.each do |i| %>
	<tr>
		<td><%= i.start_time.strftime("%A, %B %d") %></td>
		<td><%= i.start_time.strftime("%I:%M %p") %></td>
		<td><%= i.applicants.collect {|a| a.application_for_offering.person.fullname }.join('<br>') %></td>
		<td><%= i.interviewers.collect {|ix| ix.offering_interviewer.person.fullname }.join('<br>') %></td>
	</tr>
<% end %>		

</table>