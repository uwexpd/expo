<div id="tasks">
	
	<% if @phase.tasks.empty? %>

		<table>
			<tr class="empty"><td>No tasks for this phase.</td></tr>
		</table>

	<% else -%>

		<% form_remote_tag	:url => { :action => "phase", :id => @phase }, 
							:update => 'tasks_table',
							:complete => visual_effect(:highlight, 'save_note') do |f| %>

		<table id="tasks_table">
			<%= render :partial => "task", :collection => @phase.tasks.sort, :locals => { :f => f } %>
		</table>
	
		<%#= sortable_element "tasks_table", :url => {:action => 'sort_phase_tasks', :id => @phase}, :handle => 'sort-handle', :tag => "tr" %>
	
		<br>

		<center>
			<%= submit_tag "Save" %>
			<div class="autosave" id="save_note"></div>
		</center>
	
		<% end -%>
	
	<% end -%>
	
</div>