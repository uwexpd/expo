<% title("Login") %>
<p id="login-instructions">In order to access this web site, you must first log in.  If you are a member of the University of Washington community, you should log in using your UW NetID by clicking the button on the left. If you are a non-UW student, prospective student, community partner, or other non-UW user, please log in using the fields on the right.
</p>
<table class="login">
	<tr>
		<% form_tag session_path do -%>

		<td id="uwnetid">
			
			<div>
				<h2>UW Students, Faculty &amp; Staff</h2>			
				<%= link_to image_tag('app/weblogin-logo.gif'), session_path(:uwnetid_button => true), :method => :put %>
				<p><%= submit_tag 'Log in with UW NetID', :name => 'uwnetid_button' %></p>
			</div>

		</td>
		
		<%= hidden_field_tag "referer", request.env['HTTP_REFERER'] %>
		<% end -%>		
		
		<% form_tag session_path do -%>

		<td id="other">

			<h2>External Users <span class="small light grey">&nbsp;<small>for non-UW users</small></span></h2>
			
			<p><label for="login">Username</label><br/>
				<%= text_field_tag 'login', params[:login] %></p>

			<p><label for="password">Password</label><br/>
				<%= password_field_tag 'password', params[:password] %>								
			</p>

			<!-- <p><label for="remember_me">Remember me:</label>
				<%= check_box_tag 'remember_me' %></p>
 -->
			<p><%= submit_tag 'Log in' %>&nbsp; <small><%= link_to "Forgot your password?", :action => 'forgot' %></small></p>

			<!-- <p id="separator">&mdash; or &mdash;</p>

			<p>
				<label for="openid_url"><b>OpenID URL</b></label><br />
				<%= text_field_tag "openid_url" %></p>

			<p><%= submit_tag 'Log in' %></p> -->

			<p id="separator">&mdash; or &mdash;</p>

			<p>Maybe you still need to <%= link_to "create a new account", signup_path %></p>

		</td>
	</tr>
</table>

<%= hidden_field_tag "referer", request.env['HTTP_REFERER'] %>

<% end -%>