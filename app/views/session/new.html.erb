<% title("Login") %>
<!-- <p id="login-instructions">In order to access this web site, you must first log in.  If you are a member of the University of Washington community, 
you should log in using your UW NetID by clicking the button on the left. If you are a non-UW student, prospective student, community partner, or other non-UW user, please log in using the fields on the right.</p> -->
<div class="login">
	
		<% form_tag '/auth/shibboleth' do -%>

	<div id="uwnetid">			
		<h2>UW Students, Faculty &amp; Staff</h2>
		<div id="login_button">
			<p><%= link_to image_tag('app/weblogin-logo.gif', :id => "weblogin_logo"), '/auth/shibboleth', :uwnetid_button => true %></p>
			<p><%= submit_tag 'Log in with your UW NetID', :name => 'uwnetid_button', :id => "uwnetid_button" %></p>
		</div>
	</div>	
		<%#= hidden_field_tag "referer", request.env['HTTP_REFERER'] %>
		<% end -%>	
		
	<% form_tag session_path do -%>

	<h2>All other non-uw users, log in using your expo account</h2>
	
	<div id="other">
		<table class="default">						
			<tr>
				<td><label for="login">Expo Username</td>
				<td><%= text_field_tag 'login', params[:login] %></td>
			</tr>

			<tr>
				<td><label for="password">Password</label></td>
				<td><%= password_field_tag 'password', params[:password] %></td>
			</tr>
		</table>
			<!-- <p><label for="remember_me">Remember me:</label>
				<%= check_box_tag 'remember_me' %></p>
 			-->
			<p><%= submit_tag 'Log in' %>&nbsp; <small><%= link_to "Forgot your password?", :action => 'forgot' %></small></p>

			<!-- <p id="separator">&mdash; or &mdash;</p>

			<p>
				<label for="openid_url"><b>OpenID URL</b></label><br />
				<%= text_field_tag "openid_url" %></p>

			<p><%= submit_tag 'Log in' %></p> -->

			<p id="separator">&mdash; or &mdash;</p>

			<p>Maybe you still need to <%= link_to "create a new expo account", signup_path %></p>

	
	</div>
</div>

<%= hidden_field_tag "referer", request.env['HTTP_REFERER'] %>

<% end -%>