<div class="toolbar">
    <h1 id="pageTitle">EXPO Login</h1>
    <a id="backButton" class="button" href="#"></a>
</div>

<% form_tag session_path, :title => "EXPO Login", :class => 'panel', :selected => true, :target => "_self" do -%>

	<h2>UW Students, Faculty &amp; Staff</h2>
	<%= submit_tag 'Log in with UW NetID', :name => 'uwnetid_button' %>
	<%= hidden_field_tag "referer", request.env['HTTP_REFERER'] %>

	<center><%= separator %></center>

	<h2>External Users</h2>

	<fieldset>
		
		<div class="row">
			<label>Username</label>
			<%= text_field_tag 'login' %>
		</div>

		<div class="row">
			<label>Password</label>
			<%= password_field_tag 'password' %>
		</div>
		
	</fieldset>
	<p><%= submit_tag 'Log in' %></p>
	<small><%= link_to "Forgot your password?", :action => 'forgot' %></small>

<% end -%>
