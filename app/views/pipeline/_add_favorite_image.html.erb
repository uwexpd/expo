<div id="pipeline_favorite_image_<%= @pipeline_position_id %>" 
  class="pipeline_add_favorite_image">
  <%= link_to_remote "", 
       {:url=> {:controller => "pipeline", :quarter_abbrev => @quarter.abbrev, :course_abbrev => @course_abbrev, 
        :action => "add_favorite", :id => @pipeline_position_id, :favorite_page => @favorite_page},
        :indicator => "favorite_indicator_#{@pipeline_position_id}",
        :before => "this.disabled=true;this.onclick=function(){return false;}
                    $('pipeline_favorite_button_#{@pipeline_position_id}').disabled=true;
                    $('pipeline_favorite_button_#{@pipeline_position_id}').onclick=function(){return false;};"},
        :id => "pipeline_favorite_image_#{@pipeline_position_id}" %>
</div>