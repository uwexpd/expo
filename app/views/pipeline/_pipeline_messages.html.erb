<div id="div_fourths">
  <div id="orientation_status_display" class="info_fourth">
    <div class="inner_fourth border <%= @progress_statuses[:orientation][:css_class] %>">
      <div class="status_header left_cap"><small>Orientation</small></div>
      <div class="status_content">
        <%= @progress_statuses[:orientation][:text] %>
        <br />
        <% if @progress_statuses[:orientation][:button] == 1 %>
          <%= link_to "Sign Up for an Orientation", pipeline_orientation_signup_path(@quarter.abbrev, @course_abbrev), 
                      :class => "important_button button" %>
        <% elsif @progress_statuses[:orientation][:button] == 2 %>
          <%= link_to "Change your Orientation RSVP", pipeline_orientation_rsvp_path(@quarter.abbrev, @course_abbrev), 
                     :class => "button" %>
        <% end %>
      </div>
    </div>
  </div>
  <div id="background_check_status_display" class="info_fourth">
    <div class="inner_fourth border <%= @progress_statuses[:background_check][:css_class] %>">
      <div class="status_header"><small>Background Check</small></div>
      <div class="status_content">
        <%= @progress_statuses[:background_check][:text] %>
      </div>
    </div>
  </div>
  <div id="search_status_display" class="info_fourth">
    <div class="inner_fourth border <%= @progress_statuses[:search][:css_class] %>">
      <div class="status_header"><small>Search</small></div>
      <div class="status_content">
        <%= @progress_statuses[:search][:text] %>
      </div>
    </div>
  </div>
  <div id="position_status_display" class="info_fourth">
    <div class="inner_fourth <%= @progress_statuses[:position][:css_class] %>">
      <div class="status_header right_cap"><small>Position Confirmation</small></div>
      <div class="status_content">
        <%= @progress_statuses[:position][:text] %>
      </div>
    </div>
  </div>
  <div class="pipeline_clear"></div>
</div>