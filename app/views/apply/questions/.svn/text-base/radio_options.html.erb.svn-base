<li>
	<fieldset>
		<p><%= question.question %>
				<%= content_tag('em', '*', :class => 'required') if question.required? %>
				</p>
		
		<% question.options.each do |radio| %>
			<label><%= qf.radio_button(question.attribute_to_update, radio.value) %> <%= radio.title %></label>
		<% end %>
		
		<%= display_computed_caption(question.caption) if question.caption? %>
	</fieldset>
</li>