<% title("Service-Learning Self Placement Position Form", @quarter.title) %>

<p class="intro"><%= HelpText.caption(:self_placement, ServiceLearningPosition) %></p>
	
<% form_for @student, :url => { :action => "self_placement" } do |f| %>
		
	<%= render :partial => "self_placement", :locals => { :f => f } %>
		
	<div class="progress_nav_buttons">
		<%= f.submit "Save", :disable_with => "Saving..." %>
		<%= f.submit "Review and Submit", :disable_with => "Next to review page..." %>
	</div>
	<br>
<% end %>