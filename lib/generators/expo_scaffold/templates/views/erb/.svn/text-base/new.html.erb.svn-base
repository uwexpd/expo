<h1>New <%= singular_name.titleize %></h1>

<%% form_for :<%= singular_name %>, @<%= singular_name %>, :url => <%= items_path %> do |f| %>

	<%%= f.error_messages %>

	<%%= render :partial => "fields", :locals => { :f => f } %>
	
	<%%= f.submit "Create", :disable_with => 'Creating...' %>
	<%%= separator "or" %>
	<%%= link_to 'Cancel', <%= items_path %>, :class => 'cancel button' %>

<%% end %>
