<h1>Edit <%= singular_name.titleize %></h1>

<%% form_for :<%= singular_name %>, @<%= singular_name %>, 
			:url => <%= show_path(true) %>, 
			:html => { :method => :put } do |f| %>

	<%%= f.error_messages %>

	<%%= render :partial => "fields", :locals => { :f => f } %>
	
	<%%= f.submit "Save", :disable_with => 'Saving...' %>
	<%%= separator "or" %>
	<%%= link_to 'Cancel', <%= show_path(true) %>, :class => 'cancel button' %>

<%% end %>
